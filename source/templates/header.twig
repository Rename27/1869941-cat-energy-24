<header class="page__header header">
  <div class="header__cat-logo cat-logo">
    <a class="cat-logo__link" href="index.html" {% if permalink == "index.html" %}aria-current="page"{% endif %}>
      <img class="cat-logo__logo" src="img/cat-logo.png" alt="Логотип кота Cat Energy" width="34" height="38">
    </a>
  </div>
  <div class="header__cat-energy-logo cat-energy-logo">
    <a class="cat-energy-logo__link" href="index.html" {% if permalink == "index.html" %}aria-current="page"{% endif %}>
      <img class="cat-energy-logo__logo" src="img/cat-energy-logo.svg" alt="Логотип надписи Cat Energy" width="101" height="18">
    </a>
  </div>
  <div class="header__main-navigation main-navigation">
    <nav class="main-navigation">
        <button class="main-navigation__toggle" type="button" hidden>
          <span class="visually-hidden">Открыть меню</span>
        </button>
        <ul class="main-navigation__list">
          {% for page in pages %}
            <li class="main-navigation__item">
              <a
                class="main-navigation__link"
                href="{{ page.path }}"
                {% if permalink == page.path %}
                  aria-current="page"
                {% endif %}
              >{{ page.name }}</a>
            </li>
          {% endfor %}
        </ul>
    </nav>
  </div>
</header>
